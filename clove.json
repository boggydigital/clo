{
  "version": 1,
  "env-prefix": "CLV",
  "flags": [
    {
      "token": "help",
      "abbr": "h",
      "hint": "show command line help",
      "desc": "show command line help, including examples where available"
    },
    {
      "token": "verbose",
      "abbr": "v",
      "hint": "show more info when available",
      "desc": "show additional information, like examples where available"
    }
  ],
  "commands": [
    {
      "token": "verify",
      "abbr": "vf",
      "hint": "verify provided file",
      "desc": "verify that provided file meets expected constraints",
      "arguments": ["path"]
    }
  ],
  "arguments": [
    {
      "token": "path",
      "abbr": "p",
      "hint": "path to the file",
      "env": true,
      "default": true,
      "multiple": false,
      "required": true
    }]
}