{
  "version": 1,
  "env-prefix": "CLO",
  "app": "clo",
  "help": "declarative CLI parameters",
  "commands": [
    {
      "token": "verify",
      "abbr": "vf",
      "help": "verify provided file for common errors",
      "arguments": [
        "path",
        "debug"
      ],
      "default_argument": "path",
      "required_arguments": ["path"]
    },
    {
      "token": "generate",
      "abbr": "gn",
      "help": "generate clo.json or parts of it",
      "arguments": [
        "app",
        "command",
        "argument"
      ]
    }
  ],
  "arguments": [
    {
      "token": "path",
      "abbr": "p",
      "help": "path to the file",
      "env": true
    },
    {
      "token": "app",
      "help": "application name"
    },
    {
      "token": "command",
      "abbr": "cmd",
      "help": "clo.json command",
      "multiple": true
    },
    {
      "token": "argument",
      "abbr": "arg",
      "help": "clo.json argument",
      "multiple": true
    },
    {
      "token": "debug",
      "abbr": "d",
      "help": "print debug information"
    }
  ]
}